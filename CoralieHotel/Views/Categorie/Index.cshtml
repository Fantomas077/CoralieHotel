@model List<Categorie>

<div class="card border-primary mb-3">
    <div class="card-header bg-primary text-white">Category List Room</div>
    <div class="card-body">
        <div class="container">
            <div class="row pt-4 pb-2">

                <div class="col-12 text-end">
                    <a asp-controller="Categorie" asp-action="Create" class="btn btn-primary">Create New Category <i class="bi bi-plus-circle"></i></a>
                </div>
            </div>
            <table class="table table-bordered table-striped table-hover  custab">
                <thead class="table-dark">
                    <tr>
                        <th>
                            Category Name
                        </th>

                        <th></th>
                    </tr>

                </thead>

                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.Name))
                    {
                        <tr>
                            <td>@obj.Name</td>

                            <td style="width:300px">
                                <div class="btn-group d-flex justify-content-center ">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-info me-2"><i class="bi bi-pencil-square"></i> Edit</a>
                                    <a asp-controller="Category" asp-action="delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Delete</a>
                                </div>
                            </td>

                        </tr>
                    }
             
                </tbody>

            </table>

        </div>

    </div>
</div>
